public static int fib(int n, int[] arr, int size) {

		if (n == 0 || n == 1) {
			return n;
		}

		int smallAnswer = fib(n - 1, arr, n - 1) + fib(n - 2, arr, n - 2);
		arr[n] = smallAnswer;

		System.out.println(" Value of array at " + n + " is " + arr[n]);

		if (arr[n] != 0) {
			return arr[n];
		}

		return smallAnswer;

	}
